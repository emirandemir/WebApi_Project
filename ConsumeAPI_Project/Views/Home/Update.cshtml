@model ConsumeAPI_Project.ResponseModel.ProductResponseModel
<html xmlns="http://www.w3.org/1999/xhtml">


<head>

    <title>Yeni Ürün Ekle</title>


</head>


<body>

    @{
        if (TempData["errorMessage"] != null)
        {
            <p style="color:red">

                @TempData["errorMessage"]?.ToString()

            </p>
        }
    }


    <h1>Ürün Güncelle</h1>
    <form asp-action="Update" asp-controller="Home" method="post">

        <input type="hidden" asp-for="@Model.ID" />

        <label>Ürün Adı:</label>
        <input type="text" asp-for="@Model.Name" />
        <br>
        <hr />

        <label>Ürün Fiyatı:</label>
        <input type="text" asp-for="@Model.Price" />
        <br>
        <hr />

        <label>Ürün Stoğu:</label>
        <input type="text" asp-for="@Model.Stock" />
        <br>
        <hr />

        <div>
            <a asp-action="Index" asp-controller="Home"> Geri Dön</a>
            <button type="submit" asp-action="Update" asp-controller="Home"> Gönder</button>
        </div>

    </form>



</body>


</html>